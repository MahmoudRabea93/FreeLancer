@model FinalSchool.Models.Supervisors

@{
    ViewBag.Title = "Edit";
}

<h2>تعديل </h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>منسق</h4>

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)


    <div class="form-group">
        <b>وكيل الكلية للتدريب</b>
        <div class="col-md-10">
            @Html.EditorFor(model => model.RepresentativeName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.RepresentativeName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <b>	رئيس القسم</b>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SupervisorsName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SupervisorsName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <b>	منسق المقرر</b>
        <div class="col-md-10">
            @Html.EditorFor(model => model.CoordinatorName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CoordinatorName, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <b>توقيع وكيل الكلية للتدريب</b>
        <div class="col-md-10">
            @Html.EditorFor(model => model.RepresentativSignature, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.RepresentativSignature, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <b>توقيع رئيس القسم</b>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SupervisorsSignature, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.RepresentativSignature, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <b>توقيع  منسق المقرر</b>
        <div class="col-md-10">
            @Html.EditorFor(model => model.CoordinatorSignature, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CoordinatorSignature, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <b> المادة</b>
        <div class="col-md-10">
            @Html.DropDownListFor(model => model.CourseID, ViewBag.CoursesName as SelectList, new { @class = "form-control" })
        </div>
    </div>


</div>



    <div class="form-group hidden">
        @Html.LabelFor(model => model.CreationDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CreationDate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CreationDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group hidden">
        @Html.LabelFor(model => model.UpdateDate, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.UpdateDate, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.UpdateDate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="تعديل" class="btn btn-success" /> | <a href="@ViewData["LastPage"]" class="btn btn-danger hide-print">العودة الي الصفحة السابقة</a>
        </div>
    </div>

}

